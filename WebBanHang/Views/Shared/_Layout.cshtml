

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BOOK STORE</title>
    @RenderSection("Styles", required: false)
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/layout/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/layout/css/typography.css" rel="stylesheet" />
    <link href="~/layout/css/style.css" rel="stylesheet" />
    <link href="~/layout/css/responsive.css" rel="stylesheet" />

    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v19.0" nonce="xtq0K0LH"></script>
</head>
<body>
    <!-- Wrapper Start -->
    <div class="wrapper">
        <!-- Sidebar  -->
        <div class="iq-sidebar">
            <div class="iq-sidebar-logo d-flex justify-content-between">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="header-logo">
                    <img src="" class="img-fluid rounded-normal" alt="">
                    <div class="logo-title">
                        <span class="text-primary text-uppercase">BOOK STORE</span>
                    </div>
                </a>
            </div>
            <div id="sidebar-scrollbar">
                <nav class="iq-sidebar-menu">
                    <ul id="iq-sidebar-toggle" class="iq-menu">
                        <li class="active active-menu">
                            <a asp-controller="Home" asp-action="Index" class="iq-waves-effect" data-toggle="collapse" aria-expanded="true"><span class="ripple rippleEffect"></span><i class="las la-home iq-arrow-left"></i><span>Trang Chủ</span><i class="ri-arrow-right-s-line iq-arrow-right"></i></a>
                            <ul id="dashboard" class="iq-submenu collapse show" data-parent="#iq-sidebar-toggle">
                            </ul>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>

                                <a href="#pages" class="iq-waves-effect collapsed" data-toggle="collapse" aria-expanded="false"><i class="las la-file-alt iq-arrow-left"></i><span>Admin Dashboard</span><i class="ri-arrow-right-s-line iq-arrow-right"></i></a>
                                <ul id="pages" class="iq-submenu collapse" data-parent="#iq-sidebar-toggle">
                                    <li><a asp-area="Admin" asp-controller="Ad" asp-action="danhthu"><i class="ri-question-answer-line"></i>Dashboard</a></li>
                                </ul>
                            </li>
                        }
                        <li><a asp-controller="Home" asp-action="likeuser"><i class="ri-book-line"></i>Yêu Thích</a></li>
                        <li><a asp-area="" asp-controller="ShoppingCart" asp-action="UserOrders"><i class="ri-book-line"></i>Lich sử mua hàng</a></li>


                    </ul>
                </nav>
            </div>
        </div>
        <!-- TOP Nav Bar -->
        <div class="iq-top-navbar">
            <div class="iq-navbar-custom">
                <nav class="navbar navbar-expand-lg navbar-light p-0">
                    <div class="iq-menu-bt d-flex align-items-center">
                        <div class="wrapper-menu">
                            <div class="main-circle"><i class="las la-bars"></i></div>
                        </div>
                        <div class="iq-navbar-logo d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="header-logo">
                                <img src="" class="img-fluid rounded-normal" alt="">
                                <div class="logo-title">
                                    <span class="text-primary text-uppercase">BOOK STORE</span>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="navbar-breadcrumb">
                    </div>
                    <div class="iq-search-bar">
                        <form asp-action="Search" asp-controller="Product" method="post" class="searchbox">
                            <input type="search" required="required" class="text search-input" placeholder="Tìm kiếm sản phẩm..." aria-label="Search" name="searchTerm">
                            <button type="submit" class="search-link"><i class="ri-search-line"></i></button>
                        </form>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-label="Toggle navigation">
                        <i class="ri-menu-3-line"></i>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto navbar-list">
                            <li class="nav-item nav-icon search-content">
                                <a href="#" class="search-toggle iq-waves-effect text-gray rounded">
                                    <i class="ri-search-line"></i>
                                </a>
                                <form action="#" class="search-box p-0">
                                    <input type="text" class="text search-input" placeholder="Type here to search...">
                                    <a class="search-link" href="#"><i class="ri-search-line"></i></a>
                                </form>
                            </li>


                            <li class="nav-item nav-icon dropdown">
                                <a asp-action="Index" asp-controller="ShoppingCart" class="search-toggle iq-waves-effect text-gray rounded">
                                    <i class="ri-shopping-cart-2-line"></i>
                                    <span class="badge badge-danger count-cart rounded-circle"></span>
                                </a>

                            </li>
                            <li class="line-height pt-3">
                                <a href="#" class="search-toggle iq-waves-effect d-flex align-items-center">

                                    <div class="caption">

                                        <h6 class="mb-1 line-height"><partial name="_LoginPartial" /></h6>
                                    </div>
                                </a>

                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!-- TOP Nav Bar END -->
        <!-- Page Content  -->
        <div id="content-page" class="content-page">
            <div class="container-fluid">
                <div class="row">

                    @RenderBody()


                </div>
            </div>
        </div>
    </div>
    <!-- Wrapper END -->
    <!-- Footer -->
    <footer class="iq-footer">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="list-inline mb-0">
                        <li class="list-inline-item"><a href="privacy-policy.html">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="terms-of-service.html">Terms of Use</a></li>
                    </ul>
                </div>
                <div class="col-lg-6 text-right">
                    Copyright 2020 <a href="#">BOOK STORE</a> All Rights Reserved.
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer END -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/layout/js/algoliasearchlite.min.js"></script>
    <script src="~/layout/js/animated.js"></script>
    <script src="~/layout/js/apexcharts.js"></script>
    <script src="~/layout/js/bodymovin.js"></script>
    <script src="~/layout/js/bootstrap.min.js"></script>
    <script src="~/layout/js/chart-custom.js"></script>
    <script src="~/layout/js/charts.js"></script>
    <script src="~/layout/js/core.js"></script>
    <script src="~/layout/js/countdown.min.js"></script>
    <script src="~/layout/js/custom.js"></script>
    <script src="~/layout/js/datatables.bootstrap4.min.js"></script>
    <script src="~/layout/js/flatpickr.js"></script>
    <script src="~/layout/js/highcharts-3d.js"></script>
    <script src="~/layout/js/highcharts-more.js"></script>
    <script src="~/layout/js/highcharts.js"></script>
    <script src="~/layout/js/instantsearch.js"></script>
    <script src="~/layout/js/jquery-3.3.1.min.js"></script>
    <script src="~/layout/js/jquery.appear.js"></script>
    <script src="~/layout/js/jquery.counterup.min.js"></script>
    <script src="~/layout/js/jquery.datatables.min.js"></script>
    <script src="~/layout/js/jquery.magnific-popup.min.js"></script>
    <script src="~/layout/js/jquery.min.js"></script>
    <script src="~/layout/js/kelly.js"></script>
    <script src="~/layout/js/lottie.js"></script>
    <script src="~/layout/js/maps.js"></script>
    <script src="~/layout/js/morris.js"></script>
    <script src="~/layout/js/morris.min.js"></script>
    <script src="~/layout/js/owl.carousel.min.js"></script>
    <script src="~/layout/js/popper.min.js"></script>
    <script src="~/layout/js/raphael-min.js"></script>
    <script src="~/layout/js/select2.min.js"></script>
    <script src="~/layout/js/slick.min.js"></script>
    <script src="~/layout/js/smooth-scrollbar.js"></script>
    <script src="~/layout/js/style-customizer.js"></script>
    <script src="~/layout/js/waypoints.min.js"></script>
    <script src="~/layout/js/worldhigh.js"></script>
    <script src="~/layout/js/worldlow.js"></script>
    <script src="~/layout/js/wow.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .iq-product-action {
        display: flex;
        align-items: center;
    }

        .iq-product-action .action-item {
            margin-right: 10px; /* Khoảng cách giữa các biểu tượng */
        }

        .iq-product-action i {
            font-size: 24px; /* Điều chỉnh kích thước biểu tượng */
            display: flex;
            align-items: center;
            justify-content: center;
        }


    .searchbox {
        display: flex;
        align-items: center;
    }

    .search-input {
        flex: 1;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-right: 5px;
    }

    .search-link {
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
    }

        .search-link i {
            font-size: 1.5em;
            color: #333;
        }

            .search-link i:hover {
                color: #007bff;
            }

</style>