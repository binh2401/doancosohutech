@model WebBanHang.Models.Product

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Rounded Chair</h3>
            <h6 class="card-subtitle">globe type chair for rest</h6>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="white-box text-center"><img src="@Model.ImageUrl" width="430px" height="600px" class="img-responsive"></div>
                    }
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">@Model.Name</h4>
                    <p>@Model.Description</p>
                    <h2 class="mt-5">
                        @Model.Price.ToString("C")<small class="text-success"></small>
                    </h2>
                    <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <label for="quantity">Số lượng:</label>
                        <input type="number" id="quantity" name="quantity" value="1" min="1" />
                        <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="" data-original-title="Add to cart">
                           Thêm vào giỏ hàng
                        </button>
                    </form>

                        <form>
                            @Html.AntiForgeryToken()
                            <button id="likeButton" type="button" data-product-id="@Model.Id">
                                @if (Model.IsLiked)
                                {
                                    <text>Unlike</text>
                                }
                                else
                                {
                                    <text>Like</text>
                                }
                            </button>
                        </form>
                        <span id="totalLikes">@Model.TotalLikes</span> likes
                   
                    <span id="totalLikes">@Model.Likes.Count(l => l.IsLiked)</span>
                    <h3 class="box-title mt-5"></h3>
                    <ul class="list-unstyled">
                        <li><i class="fa fa-check text-success"></i>Tác giả: @Model.author </li>
                        <li><i class="fa fa-check text-success"></i>Loại sản phẩm: @Model.Category.Name</li>
                        <li><i class="fa fa-check text-success"></i>tổng like: @Model.TotalLikes</li>
                    </ul>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-5">Thông tin sách</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">Công ty phát hành</td>
                                    <td>@Model.congtyphathanh</td>
                                </tr>
                                <tr>
                                    <td>Loại bìa</td>
                                    <td>@Model.loaibia</td>
                                </tr>
                                <tr>
                                    <td>Số trang</td>
                                    <td>@Model.sotrang</td>
                                </tr>
                                <tr>
                                    <td>Nhà sản xuất</td>
                                    <td>@Model.nhasanxuat</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#likeButton').click(function () {
            var productId = $(this).data('product-id');
            var token = $('input[name="__RequestVerificationToken"]').val();
            var totalLikes = parseInt($('#totalLikes').text());
            var isLiked = $(this).text() === 'Unlike';

            $.ajax({
                url: isLiked ? '@Url.Action("UnlikeProduct", "Home")' : '@Url.Action("LikeProduct", "Home")',
                type: 'POST',
                data: {
                    productId: productId,
                    __RequestVerificationToken: token
                },
                success: function (response) {
                    if (response.success) {
                        $('#totalLikes').text(response.totalLikes);
                        $('#totalUsersLiked').text(response.totalUsersLiked);

                        // Cập nhật nút "like" để phản ánh trạng thái mới
                        $('#likeButton').text(isLiked ? 'Like' : 'Unlike');
                    } else {
                        alert(response.message || 'Something went wrong!');
                    }
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                    alert('An error occurred while processing your request: ' + xhr.status + ' ' + error);
                }
            });
        });
    });
</script>