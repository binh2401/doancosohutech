@model IEnumerable<WebBanHang.Models.Category>

@{
    ViewData["Title"] = "Categories";
    Layout = "_AdminLayout";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
<h2>Thể loại</h2>

<p>
    
                <a class="nav-link text-dark" asp-action="Add">Thêm thể loại</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
             Tên thể loại

            </th>
            <th>
               Tên thể loại tổng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @(item.menu?.Name)
                </td>
                <td>
                                <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</main>
</div>