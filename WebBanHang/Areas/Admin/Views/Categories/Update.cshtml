@model WebBanHang.Models.Category

@{
    ViewData["Title"] = "Update";
    Layout = "_AdminLayout";
}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
<h2>Sửa thể loại</h2>
<form asp-controller="Categories" asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="menuid">Thể loại Tổng </label>
        <select asp-for="menuid" asp-items="@ViewBag.Menus"
                class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
</div>
</main>
</div>